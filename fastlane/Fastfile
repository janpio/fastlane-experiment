lane :remote_scan do
    upload_id = ENV['UPLOAD_ID']

    download_file(
        url: "http://remote-fastlane.betamo.de/uploads/#{upload_id}", 
        destination_path: './tmp/archive.zip'
    )
    unzip(
        file: "./tmp/archive.zip", 
        destination_path: "./tmp/app/"
    )
    test
end

lane :test do
    #puts Dir.pwd
    #Dir.chdir("../tmp/app/iosapp") do
        #puts Dir.pwd
        #puts Dir["./*.xcodeproj"]
        run_tests(
            project: "tmp/app/iosapp/iosapp.xcodeproj",
            device: "iPhone 5s"
        )
    #end
end